{
  "name": "co2-assistant-ui-tests",
  "version": "1.0.0",
  "description": "UI tests for CO2-Aware Shopping Assistant",
  "main": "test-ui.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest test-ui.js",
    "test:html": "start test-ui.html"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "test-ui.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/test-ui.js"
    ]
  }
}
